{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "src",
    "paths": {
      "types/*": ["types/*"]
    },
    "outDir": "./dist",
    "target": "ES5",
    "lib": [
      "es7",
    ],
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
}
